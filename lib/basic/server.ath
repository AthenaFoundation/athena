define (start-athena-server port) :=
 let {client-request-size := 122880;
      _                   := (silence-on);
      server              := (make-server client-request-size
                               lambda (str)
                                 (catch lambda () (val->string (evaluate str))
                                        lambda (error_msg)
                                         error_msg))}
   (server port)
